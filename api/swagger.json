{
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "schemes": [
    "http"
  ],
  "swagger": "2.0",
  "info": {
    "description": "Open API for URL shortener service",
    "title": "URL shortener API.",
    "contact": {
      "name": "Pavel Bobylev",
      "url": "https://github.com/phpCoder88",
      "email": "p_bobylev@bk.ru"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "1.0.0"
  },
  "host": "localhost:8000",
  "basePath": "/api",
  "paths": {
    "/report": {
      "get": {
        "description": "Returns report information",
        "produces": [
          "application/json"
        ],
        "operationId": "URLReport",
        "responses": {
          "200": {
            "description": "returns report information",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "fullURL": {
                    "description": "Full URL",
                    "type": "string"
                  },
                  "visits": {
                    "description": "Visit counts of URL",
                    "type": "integer"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/shorten": {
      "post": {
        "description": "Creates a new short URL for given URL",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "operationId": "shortenURL",
        "parameters": [
          {
            "description": "URL to shorten",
            "name": "url",
            "in": "body",
            "schema": {
              "type": "object",
              "required": [
                "fullURL"
              ],
              "properties": {
                "fullURL": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Short URL already exists",
            "schema": {
              "type": "object",
              "properties": {
                "shortURL": {
                  "description": "Short URL",
                  "type": "string"
                }
              }
            }
          },
          "201": {
            "description": "Created short URL",
            "schema": {
              "type": "object",
              "properties": {
                "shortURL": {
                  "description": "Short URL",
                  "type": "string"
                }
              }
            }
          },
          "405": {
            "description": "Invalid input"
          }
        }
      }
    }
  }
}
